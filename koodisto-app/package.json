{
    "name": "koodisto-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@opetushallitus/virkailija-ui-components": "^0.4.7",
        "@tanstack/match-sorter-utils": "8.19.4",
        "@tanstack/react-table": "8.21.3",
        "axios": "0.30.2",
        "jotai": "1.13.1",
        "lodash": "^4.17.21",
        "moment": "2.30.1",
        "papaparse": "5.5.3",
        "react": "^17.0.2",
        "react-accessible-accordion": "^4.0.0",
        "react-dom": "^17.0.2",
        "react-hook-form": "7.68.0",
        "react-intl": "6.8.9",
        "react-notifications-component": "^3.4.1",
        "react-papaparse": "4.4.0",
        "react-router-dom": "6.30.2",
        "reactjs-popup": "2.0.6",
        "styled-components": "5.3.11",
        "universal-cookie": "^7.2.2"
    },
    "devDependencies": {
        "@formatjs/intl": "2.10.15",
        "@iconify/react": "3.2.2",
        "@playwright/test": "1.57.0",
        "@types/lodash": "4.17.21",
        "@types/node": "24.10.4",
        "@types/papaparse": "5.5.2",
        "@types/react": "17.0.90",
        "@types/react-dom": "17.0.26",
        "@types/react-select": "3.0.14",
        "@types/react-table": "7.7.20",
        "@types/styled-components": "5.1.36",
        "@typescript-eslint/eslint-plugin": "7.18.0",
        "@typescript-eslint/parser": "7.18.0",
        "concurrently": "7.6.0",
        "copy-webpack-plugin": "12.0.2",
        "css-loader": "6.11.0",
        "eslint": "8.57.1",
        "eslint-config-prettier": "8.10.2",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-react": "7.37.5",
        "file-loader": "6.2.0",
        "fork-ts-checker-webpack-plugin": "9.1.0",
        "html-webpack-plugin": "5.6.5",
        "mini-css-extract-plugin": "2.9.4",
        "prettier": "2.8.8",
        "source-map-loader": "5.0.0",
        "style-loader": "4.0.0",
        "ts-loader": "9.5.4",
        "tsx": "4.21.0",
        "typescript": "5.9.3",
        "webpack": "5.104.1",
        "webpack-cli": "6.0.1",
        "webpack-dev-server": "5.2.2",
        "webpack-manifest-plugin": "5.0.1"
    },
    "scripts": {
        "start": "NODE_ENV=development npx webpack serve",
        "mock-api": "npm --prefix ./mock-api run mock-api",
        "build": "GENERATE_SOURCEMAP=false NODE_ENV=production npx webpack --mode production",
        "test": "node --import tsx --test ./src/**/*.test.ts",
        "lint": "tsc --noEmit && eslint --ext .ts,.tsx src",
        "lint:fix": "eslint --ext .ts,.tsx src --fix",
        "prettier": "prettier --check 'src/**/*{js,jsx,ts,tsx}'",
        "prettier:fix": "prettier --write 'src/**/*{js,jsx,ts,tsx}'",
        "playwright": "PLAYWRIGHT=true concurrently -s first -k 'npm run mock-api' 'npm run start' 'sleep 5 && npx playwright test'",
        "playwright:install": "playwright install-deps && playwright install chromium && npm --prefix mock-api ci"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint",
            "react"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:react/recommended"
        ],
        "settings": {
            "react": {
                "version": "detect"
            }
        },
        "rules": {
            "@typescript-eslint/no-unused-vars": [
                "error",
                {
                    "ignoreRestSiblings": true
                }
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "proxy": "http://localhost:9000"
}
